# AWS Environment Configuration Template
# Copy this file to .env.local and fill in your values

# ============================================
# STORAGE CONFIGURATION
# ============================================
STORAGE_DRIVER=s3
S3_BUCKET=
S3_REGION=us-east-2
S3_CLOUDFRONT_URL=

# ============================================
# DATABASE CONFIGURATION (RDS PostgreSQL)
# ============================================
DB_DRIVER=postgres
DATABASE_URL=postgresql://username:password@rds-endpoint.region.rds.amazonaws.com:5432/dbname
RDS_PROXY_ENDPOINT=
RDS_DB=ortmeier
RDS_USER=
RDS_PASSWORD=
RDS_SSL_MODE=require

# ============================================
# AUTHENTICATION & APPLICATION
# ============================================
JWT_SECRET=
NODE_ENV=production
MAINTENANCE_READONLY=false
APP_VERSION=1.0.0
DEPLOYMENT_REGION=us-east-2
FORCE_HTTPS=true

# ============================================
# QUICKBOOKS INTEGRATION (Optional)
# ============================================
QB_CLIENT_ID=
QB_CLIENT_SECRET=
QB_REDIRECT_URI=
QB_SANDBOX_MODE=false

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
EMAIL_PROVIDER=ses
EMAIL_API_KEY=
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Ortmeier Technical Service

# ============================================
# MIGRATION & MONITORING
# ============================================
RUN_MIGRATIONS_ON_STARTUP=false
MIGRATION_AUTH_TOKEN=

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# ============================================
# DEPLOYMENT SPECIFIC
# ============================================
PORT=3000
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=