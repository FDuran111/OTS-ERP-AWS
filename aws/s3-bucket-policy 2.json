{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowECSTaskRole",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::928805968684:role/ots-erp-task-role"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::ots-erp-prod-uploads/jobs/*"
    },
    {
      "Sid": "AllowECSTaskRoleList",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::928805968684:role/ots-erp-task-role"
      },
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::ots-erp-prod-uploads",
      "Condition": {
        "StringLike": {
          "s3:prefix": "jobs/*"
        }
      }
    }
  ]
}