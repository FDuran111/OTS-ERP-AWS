{
  "name": "erp-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:env": "jest src/lib/__tests__/assertEnvIsolation.test.ts",
    "test:smoke": "tsx tests/storage-driver.smoke.ts",
    "test:smoke:db": "tsx tests/db-driver.smoke.ts",
    "test:smoke:urls": "tsx tests/file-urls.smoke.ts",
    "migrate:storage": "tsx scripts/migrate-storage.ts",
    "infra:init": "cd infra/terraform && terraform init",
    "infra:plan": "cd infra/terraform && terraform plan -var='aws_region=us-east-2'",
    "infra:apply": "cd infra/terraform && terraform apply -auto-approve -var='aws_region=us-east-2'",
    "aws:validate:s3": "bash scripts/aws/validate-s3.sh $(terraform -chdir=infra/terraform output -raw s3_bucket_name) us-east-2",
    "db:migrate": "tsx scripts/migrate-db.ts",
    "db:migrate:verify": "tsx scripts/migrate-db.ts --verify",
    "db:migrate:seed": "tsx scripts/migrate-db.ts --seed"
  },
