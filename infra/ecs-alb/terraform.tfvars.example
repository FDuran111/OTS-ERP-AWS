# Example Terraform variables for ECS-ALB infrastructure
# Copy this file to terraform.tfvars and fill in your actual values

# VPC Configuration
vpc_id = "vpc-xxxxxxxx"  # Your VPC ID

# Public subnets for Application Load Balancer
public_subnet_ids = [
  "subnet-aaaa1111",  # Public subnet in AZ-1
  "subnet-bbbb2222"   # Public subnet in AZ-2
]

# Private subnets for ECS Fargate tasks
private_subnet_ids = [
  "subnet-cccc3333",  # Private subnet in AZ-1
  "subnet-dddd4444"   # Private subnet in AZ-2
]

# Region is set via default in variables.tf (us-east-2)
# To override: aws_region = "us-west-2"

# ============================================
# HELPFUL COMMANDS TO FIND YOUR IDS:
# ============================================
#
# Find VPC by Name tag:
# aws ec2 describe-vpcs --region us-east-2 \
#   --filters "Name=tag:Name,Values=ots-erp-*" \
#   --query "Vpcs[0].VpcId" --output text
#
# Find subnets by VPC and type:
# aws ec2 describe-subnets --region us-east-2 \
#   --filters "Name=vpc-id,Values=vpc-YOUR-ID" \
#   --query "Subnets[?MapPublicIpOnLaunch==\`true\`].SubnetId" --output text  # Public
#
# aws ec2 describe-subnets --region us-east-2 \
#   --filters "Name=vpc-id,Values=vpc-YOUR-ID" \
#   --query "Subnets[?MapPublicIpOnLaunch==\`false\`].SubnetId" --output text # Private